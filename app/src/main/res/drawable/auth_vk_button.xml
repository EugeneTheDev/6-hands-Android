<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:right="0.1dp" android:top="1.5dp">
        <shape>
            <solid android:color="#3d000000" />
            <corners android:radius="2dp"/>
        </shape>
    </item>
    <!-- CONTENT LAYER -->
    <item android:left="0.1dp" android:bottom="1.5dp">
        <shape>
            <solid android:color="#517298" />
            <corners android:radius="2dp"/>
        </shape>
    </item>

    <item android:left="13.5dp">
        <bitmap android:src="@drawable/vk_logo"
            android:gravity="center_vertical|left"/>
    </item>

    <item android:left="50dp" android:bottom="1.5dp" android:gravity="left">
        <shape android:shape="rectangle" >
            <stroke android:width="0.5dp" android:color="#435f7e" />
            <size android:width="1dp" />
        </shape>
    </item>
</layer-list>